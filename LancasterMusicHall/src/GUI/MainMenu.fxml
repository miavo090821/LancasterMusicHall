<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="GUI.MainMenuController" spacing="20" alignment="CENTER" style="-fx-background-color: white;" padding="20">

    <!-- Title -->
    <Label text="Lancaster Music Hall" font="$titleFont" />

    <!-- Login Header -->
    <Label text="Staff Login:" font="$headerFont" />

    <!-- Staff ID Field -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="Staff ID:" font="$labelFont" />
        <TextField fx:id="staffIdField" promptText="Enter Staff ID" prefWidth="200" />
    </HBox>

    <!-- Password Field -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="Password:" font="$labelFont" />
        <PasswordField fx:id="passwordField" promptText="Enter Password" prefWidth="200" />
    </HBox>

    <!-- Login Button -->
    <Button text="Enter" onAction="#handleLogin" style="-fx-background-color: white;" />

    <!-- Forgotten Password -->
    <Hyperlink text="Forgotten Password?" onAction="#handleForgotPassword" />

    <VBox.stylesheets>
        <URL value="@style.css"/>
    </VBox.stylesheets>

    <VBox.fonts>
        <Font fx:id="titleFont" name="Arial Bold" size="27"/>
        <Font fx:id="headerFont" name="Arial Bold" size="20"/>
        <Font fx:id="labelFont" name="Arial Bold" size="16"/>
    </VBox.fonts>

</VBox>
